<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:id="@+id/item"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/release_noimg"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/iv_clean_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/release_img_del"/>
   <LinearLayout
       android:layout_width="match_parent"
       app:layout_constraintTop_toBottomOf="@id/iv_photo"
       android:layout_marginTop="10dp"
       android:orientation="horizontal"
       android:layout_height="35dp">
       <LinearLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:orientation="horizontal"
           android:gravity="center"
           android:background="@drawable/bg_kuang"
           android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排序:"/>
           <TextView
               android:id="@+id/tv_sort_count"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="0"
               />
       </LinearLayout>
       <TextView
           android:id="@+id/tv_updata"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent"
           android:background="@drawable/bg_kuang"
           android:drawableLeft="@drawable/release_album_up"
           android:paddingLeft="20dp"
           android:gravity="center"
           android:text="上传"/>
   </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>