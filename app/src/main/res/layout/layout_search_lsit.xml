<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">
    <ImageView
        android:id="@+id/iv_order"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥100"
        android:textSize="13sp"
        android:textColor="@color/colorText"
        app:layout_constraintTop_toTopOf="@id/iv_order"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x1"
        android:textSize="13sp"
        android:textColor="#999999"
        app:layout_constraintTop_toBottomOf="@id/tv_money"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_order"
        app:layout_constraintLeft_toRightOf="@id/iv_order"
        android:layout_marginLeft="14dp"
        android:textColor="@color/colorText"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="14sp"
        android:text="商品名称"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv_parameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="黑色；大号；圆形"
        android:textColor="#999999"
        app:layout_constraintLeft_toRightOf="@id/iv_order"
        app:layout_constraintBottom_toBottomOf="@id/iv_order"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="14dp"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/tv_all_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥100"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_parameter"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总计:"
        app:layout_constraintRight_toLeftOf="@id/tv_all_money"
        app:layout_constraintTop_toBottomOf="@id/tv_parameter"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/bt_issure"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bt_order_issure"
        android:gravity="center"
        android:text="调整费用"
        android:textColor="@color/colorMain"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_all_money"
        app:layout_constraintRight_toRightOf="parent"
       />
</androidx.constraintlayout.widget.ConstraintLayout>