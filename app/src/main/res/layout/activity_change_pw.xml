<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.aite.jiananseller.ui.vm.login.ChangePWViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <include
            android:id="@+id/title"
            layout="@layout/title"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#505050"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/title"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="35dp"
            android:text="找回密码"/>
        <RadioGroup
            android:id="@+id/rg_title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_marginTop="55dp"
            android:checkedButton="@={viewModel.checkBt}"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_step_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="1.验证手机号码"
                android:textSize="15sp"
                android:gravity="center"
                android:clickable="@{viewModel.isTitleClick}"
                android:textColor="@color/rb_find_pw_title"
                android:checked="true"
                android:layout_weight="1"/>
            <View
                android:layout_width="1dp"
                android:layout_height="17dp"
                android:background="#D0D0D0"/>
            <RadioButton
                android:id="@+id/rb_step_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="2.设置新密码"
                android:clickable="@{viewModel.isTitleClick}"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/rb_find_pw_title"
                android:layout_weight="1"/>
        </RadioGroup>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.cl1Visible}"
            app:layout_constraintTop_toBottomOf="@id/rg_title"
            >
            <TextView
                android:id="@+id/tv_area_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/view"
                android:layout_marginTop="90dp"
                android:textColor="#5C5C5C"
                android:layout_marginLeft="8dp"
                android:textSize="15sp"
                android:text="+855"/>
            <ImageView
                android:id="@+id/iv_choose_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/tv_area_num"
                app:layout_constraintTop_toTopOf="@id/tv_area_num"
                app:layout_constraintBottom_toBottomOf="@id/tv_area_num"
                android:layout_marginLeft="5dp"
                app:srcCompat="@drawable/login_choose_area"/>
            <EditText
                android:id="@+id/et_user_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/iv_choose_area"
                app:layout_constraintRight_toRightOf="@id/view"
                app:layout_constraintTop_toTopOf="@id/iv_choose_area"
                app:layout_constraintBottom_toBottomOf="@id/iv_choose_area"
                android:layout_marginLeft="20dp"
                android:textColorHint="#D1D1D1"
                android:text="@={viewModel.userName}"
                android:hint="请输入注册手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:textSize="14sp"
                android:background="@null"/>
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="23dp"
                android:background="#E2E2E2"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                app:layout_constraintTop_toBottomOf="@id/tv_area_num"/>
            <EditText
                android:id="@+id/et_auth_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/view"
                app:layout_constraintRight_toLeftOf="@id/bt_send_code"
                app:layout_constraintTop_toBottomOf="@id/view"
                android:layout_marginTop="20dp"
                android:textColorHint="#D1D1D1"
                android:text="@={viewModel.code}"
                android:hint="请输入短信验证码"
                android:inputType="numberDecimal"
                android:maxLength="11"
                android:textSize="14sp"
                android:background="@null"/>
            <Button
                android:id="@+id/bt_send_code"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:background="@drawable/bt_send_auth_code"
                android:layout_marginRight="10dp"
                android:text="发送验证码"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/view"
                app:layout_constraintBottom_toTopOf="@id/view_1"
                app:layout_constraintRight_toRightOf="@id/view"/>
            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#E2E2E2"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                app:layout_constraintTop_toBottomOf="@id/et_auth_code"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.cl2Visible}"
            app:layout_constraintTop_toBottomOf="@id/rg_title"
            >

            <EditText
                android:id="@+id/et_new_pw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/view3"
                app:layout_constraintRight_toRightOf="@id/view3"
                android:textColorHint="#D1D1D1"
                android:hint="请设置6-20位新的登录密码"
                android:gravity="center"
                android:text="@={viewModel.newPassWord}"
                android:inputType="textPassword"
                android:maxLength="11"
                android:textSize="14sp"
                android:background="@null"/>
            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="23dp"
                android:background="#E2E2E2"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                app:layout_constraintTop_toBottomOf="@id/et_new_pw"/>
            <EditText
                android:id="@+id/et_new_pw2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/view3"
                app:layout_constraintRight_toRightOf="@id/view3"
                app:layout_constraintTop_toBottomOf="@id/view3"
                android:layout_marginTop="20dp"
                android:textColorHint="#D1D1D1"
                android:gravity="center"
                android:text="@={viewModel.confimPassWord}"
                android:inputType="textPassword"
                android:hint="请再次输入新的登录密码"
                android:maxLength="11"
                android:textSize="14sp"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#E2E2E2"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                app:layout_constraintTop_toBottomOf="@id/et_new_pw2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
            android:id="@+id/bt_next"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_1"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:button="@null"
            android:gravity="center"
            android:textSize="18sp"
            android:enabled="false"
            android:visibility="@{viewModel.bt1Visible}"
            android:text="下一步"
            binding:onClickCommand="@{viewModel.nextOnClick}"
            android:textColor="@color/rb_next"
            android:layout_marginTop="40dp"
            android:background="@drawable/bt_next_commit"/>
        <Button
            android:id="@+id/bt_commit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_1"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:visibility="@{viewModel.bt2Visible}"
            android:button="@null"
            android:gravity="center"
            android:textSize="18sp"
            android:enabled="false"
            binding:onClickCommand="@{viewModel.changePWOnClick}"
            android:text="提交"
            android:textColor="@color/rb_next"
            android:layout_marginTop="40dp"
            android:background="@drawable/bt_next_commit"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>