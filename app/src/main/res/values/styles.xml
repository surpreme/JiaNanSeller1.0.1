    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
                <!-- Customize your theme here. -->
                <item name="colorPrimary">@color/colorPrimary</item>
                <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
                <item name="colorAccent">@color/colorAccent</item>
                <item name="windowActionBar">false</item>
                <item name="windowNoTitle">true</item>
            </style>
    <!--EditText的主題 Start-->
    <style name="TextInputLayoutLineColor" parent="Theme.AppCompat.Light">
        <!--没有获取焦点时的颜色-->
        <item name="colorControlNormal">#FFCCCCCC</item>
        <!--获取焦点时的颜色-->
        <item name="android:dividerHeight">1dp</item>
        <item name="colorControlActivated">@color/colorMain</item>
    </style>

    <!--浮动标签-->
    <style name="hintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!--错误提示信息-->
    <style name="errorAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <!--超出计数最大长度,浮动标签,下划线,计数文字都会改变颜色-->
    <style name="counterOverflowTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFCCCCCC</item>
    </style>
    <style name="AnimnearPopup1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_menu_in1</item>
        <item name="android:windowExitAnimation">@anim/popup_menu_out1</item>
    </style>
</resources>
